<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1730543371629-3" author="imkrasnyukov">
        <createTable tableName="account_roles">
            <column name="account_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account_roles"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account_roles"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1730543371629-4" author="imkrasnyukov">
        <createTable tableName="roles">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_roles"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1730543371629-5" author="imkrasnyukov">
        <addColumn tableName="accounts">
            <column name="created_at" type="DATETIME"/>
            <column name="email" type="VARCHAR(100)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="username" type="VARCHAR(30)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1730543371629-6" author="imkrasnyukov">
        <addNotNullConstraint columnName="created_at" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-8" author="imkrasnyukov">
        <addNotNullConstraint columnName="email" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-10" author="imkrasnyukov">
        <addNotNullConstraint columnName="password" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-12" author="imkrasnyukov">
        <addNotNullConstraint columnName="updated_at" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-14" author="imkrasnyukov">
        <addNotNullConstraint columnName="username" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-15" author="imkrasnyukov">
        <addUniqueConstraint columnNames="email" constraintName="uc_accounts_email" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-16" author="imkrasnyukov">
        <addUniqueConstraint columnNames="username" constraintName="uc_accounts_username" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-17" author="imkrasnyukov">
        <addForeignKeyConstraint baseColumnNames="account_id" baseTableName="account_roles"
                                 constraintName="fk_accrol_on_account" referencedColumnNames="id"
                                 referencedTableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-18" author="imkrasnyukov">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="account_roles"
                                 constraintName="fk_accrol_on_account_role" referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>
    <changeSet id="1730543371629-19" author="imkrasnyukov">
        <dropColumn columnName="name" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-1" author="imkrasnyukov">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="chat_id" tableName="accounts"/>
    </changeSet>
    <changeSet id="1730543371629-2" author="imkrasnyukov">
        <modifyDataType columnName="locale" newDataType="VARCHAR(255)" tableName="accounts"/>
    </changeSet>

</databaseChangeLog>